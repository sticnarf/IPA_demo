<!DOCTYPE html>
<html>
<head>
  <title>Wxyzipa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body data-controller="<%= controller_name %>">
  <div class="body">
    <header>
      <a href="/" id="logo"></a>
      <nav>
        <ul id="top_nav">
          <% if signed_in? %>
          <li id="left" class="p">欢迎，<%= current_user.name %></li>
          <li class="p"><%= link_to "登出", signout_path, method: "delete" %></li>
          <% else %>
          <li id="left" class="p"><%= link_to "注册", signup_path %></li>
          <li class="p"><%= link_to "登录", signin_path %></li>
          <% end %>
        </ul>
      </nav>

      <nav>
        <ul id="menu">
          <li><%= link_to "INTRO", root_path %></li>
          <li><a id="activities">ACTIVITIES</a></li>
          <li><a id="works">WORKS</a></li>
          <li><%= link_to "MEMBERS", current_user || signin_path, id: "members" %></li>
          <li><a id="contacts">CONTACTS</a></li>
        </ul>
      </nav>
    </header>

    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "flash flash-#{key}" %>
      <% end %>
      <%= yield %>
    </div>

    <footer>
      <small>Copyright 2014 Information & Photography Association. All Rights Reserved.</small>
    </footer>

  </div>
</body>
</html>
