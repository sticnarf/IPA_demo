@import url(http://fonts.useso.com/css?family=Pacifico);
@import url(http://www.youziku.com/webfont/CSS/f30b5da6c79d9fd0f0337f101eebf5b6);
body {
  background-color: #000000;
  color: #FFFFFF;
  font-family: Helvetica, Tahoma, Arial, STXihei, "华文细黑", "Microsoft YaHei", "微软雅黑", SimSun, "宋体", Heiti, "黑体", sans-serif;
}

header {
  overflow: auto;
  padding-bottom: 10px;
}

.body {
  width: 940px;
  margin: 0 auto;
}

#logo {
  background: url("<%= asset_path('logo.gif') %>") no-repeat scroll 0 0 / 100% 100% rgba(0, 0, 0, 0);
  display: block;
  height: 138px;
  width: 160px;
  margin-top: 10px;
  margin-left: 30px;
  float: left;
}

ul {
  list-style: none;
}

#top_nav {
  float: right;
  padding: 10px 37px 0 575px;

  .icon {
    float: left;
    padding: 4px 26px 5px 26px;
  }

  #home_icon {
    border-right: 1px solid #353535;
  }
}

#menu {
  color: #FFFFFF;
  float: right;
  padding: 0 28px 20px 0;
  li {
    float: left;
    a {
      &:hover {
        background-color: #FFC11E;
      }
      padding: 0 20px;
      height: 42px;
      line-height: 42px;
      letter-spacing: 0.5px;
      margin-left: 2px;
      margin-right: 2px;
      display: block;
    }
    .active-menu {
      background-color: #FFC11E;
    }
  }
}

footer {
  border-top: 1px solid #353535;
  color: #999999;
  float: left;
  margin-top: 45px;
  padding-top: 5px;
  width: 100%;
}
